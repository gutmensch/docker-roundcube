server {
        listen 80 default_server;
        listen [::]:80 default_server;

        root /var/www/public_html;
        index index.php;

        server_name _;

        location / {
                try_files $uri $uri/ =404;
        }

        location ~ [^/]\.php(/|$) {
                include snippets/fastcgi-php.conf;
                fastcgi_pass unix:/var/run/php-fpm.sock;
        }

        location ~ /\.ht {
                deny all;
        }

        location ~ ^/(bin|db|config|logs|temp)/ {
                deny all;
        }
}
